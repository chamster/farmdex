<%- model_class = Animal -%>
<div class="page-header">
  <h1><%= @animal.name %></h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4" style="float:left;">
    <table class="table" style="width:400px">
    <tbody>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:name) %>:</strong></td>
      <td><%= @animal.name %></td>
    </tr>
      <td><strong><%= model_class.human_attribute_name(:eartag) %>:</strong></td>
      <td><%= @animal.eartag %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:reg_num) %>:</strong></td>
      <td><%= @animal.reg_num %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:sex_id) %>:</strong></td>
      <td><%= @animal.sex.sex %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:date_birth) %>:</strong></td>
      <td><%= @animal.date_birth %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:date_acquired) %>:</strong></td>
      <td><%= @animal.date_acquired %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:date_removed) %>:</strong></td>
      <td><%= @animal.date_removed %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></td>
      <td><%= @animal.status.status %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:num_horns) %>:</strong></td>
      <td><%= @animal.num_horns %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:sire_id) %>:</strong></td>
      <td><%= @animal.sire_id %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:dam_id) %>:</strong></td>
      <td><%= @animal.dam_id %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:source_id) %>:</strong></td>
      <td><%= @animal.source_id %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:origin_id) %>:</strong></td>
      <td><%= @animal.origin.origin %></td>
    </tr>
      </tbody>
    </table>
    </div>
    <div class="col-md-4" style="float:left;padding-left:20px;">
    <table class="table" style="width:400px">
    <tbody>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:percent_black) %>:</strong></td>
      <td><%= @animal.percent_black %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:percent_lilac) %>:</strong></td>
      <td><%= @animal.percent_lilac %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:for_sale) %>:</strong></td>
      <td><%= @animal.for_sale %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:for_sale_status_id) %>:</strong></td>
      <td><%= @animal.for_sale_status_id %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:quality_id) %>:</strong></td>
      <td><%= @animal.quality.quality if @animal.quality %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:sale_price) %>:</strong></td>
      <td><%= @animal.sale_price %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:to_be_culled) %>:</strong></td>
      <td><%= @animal.to_be_culled %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:comments) %>:</strong></td>
      <td><%= @animal.comments %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:comments_web) %>:</strong></td>
      <td><%= @animal.comments_web %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:show_on_website) %>:</strong></td>
      <td><%= @animal.show_on_website %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:core_flock) %>:</strong></td>
      <td><%= @animal.core_flock %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:birth_id) %>:</strong></td>
      <td><%= @animal.birth_id %></td>
    </tr>
    <tr>
      <td><strong><%= model_class.human_attribute_name(:rejected_at_birth) %>:</strong></td>
      <td><%= @animal.rejected_at_birth %></td>
    </tr>
      </tbody>
    </table>
    </div>
    <div class="col-md-4">
      test test
    </div>
  </div>

  <div class="form-actions">
    <%= link_to 'Back to animals', animals_path, :class => "btn" %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_animal_path(@animal), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                animal_path(@animal),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
</div>
